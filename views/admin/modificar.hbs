<div class="container">
    <div class="row">
        <div class="col-9 offset-2">
            <h4>Modificar las novedades</h4>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group inputs">
                    <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control" name="titulo">
                </div>
                <div class="form-group inputs">
                    <input type="text" placeholder="Subtitulo" value="{{novedad.subtitulo}}" class="form-control" name="subtitulo">
                </div>
                <div class="form-group inputs">
                    <textarea type="text" placeholder="Parrafo" class="form-control" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                
                <button type="submit" class="btn btn-danger" style="margin: 10px;">Modificar</button>
            </form>
        </div>
    </div>
</div>