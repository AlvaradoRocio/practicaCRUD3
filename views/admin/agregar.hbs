<main class="fondo">
    <div class="container" style="margin-top:100px; padding: 0 100px 100px 100px;">
        <h2>Agregar novedades</h2>
            <div class="row">
                <form method="post" action="/admin/novedades/agregar">
                    <div class="mb-3 row">
                        <input type="text" class="form-control" placeholder="Titulo" name="titulo">

                    </div>
                    <div class="mb-3 row">
                        <input type="text" class="form-control" placeholder="subtitulo" name="subtitulo">
                    </div>

                    <div class="mb-3 row">
                        <textarea type="text" class="form-control" placeholder="cuerpo" name="cuerpo"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
    </div>
</main>